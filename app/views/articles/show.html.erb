<h2 align="center"> <%=@article.title%> </h1>
<div class="well col-xs-8 col-xs-offset-2">
    <h4 class="center description"><strong>Description:</strong></h4>
    <hr>
    <%= simple_format(@article.description) %>
    <div class="article-actions">
        <%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-xs btn-primary" %> 
        <td><%= link_to 'Delete this article', article_path(@article), class: "btn btn-xs btn-danger", method: :delete, data: {confirm: "Are you sure?"} %></td>  
        <%= link_to "Back to articles", articles_path, class: "btn btn-xs btn-success" %>
    </div>
</div>